<%= form_with(model: inventory, local: false) do |form| %>
  <div class="modal-body">
  
    <ul class="errors">
    </ul>
      
      <div class="row">
        <div class="col">
        <div class="form-group">
          <%= form.label :inventory_date, "Date d'inventaire", class: "required" %>
          <%= form.date_field :inventory_date, class: "form-control", required: true %>
        </div>

      
        <div class="form-group customSelect">
            <%= form.label :product_id, "Produit", class: "required" %>
            <%= form.collection_select(:product_id, @products, :id, :name, {prompt: "Sélectionner"}, class: "form-control ", style: "width: 100%", required: true) %> 
        </div>
     

  

        <div class="form-group">
          <%= form.label :real_stock, "Stock réel", class: "required" %>
          <%= form.number_field :real_stock, class: "form-control", required: true %>
        </div>
      </div>


    </div><!-- modal body -->
      <div class="modal-footer">
        <%= link_to "Annuler", "#", class: "btn btn-secondary tx-mont tx-medium tx-11 tx-uppercase pd-y-12 pd-x-25 tx-spacing-1", data: {dismiss: "modal"} %>
        <%= form.submit "Enregistrer", class: "btn btn-primary tx-mont tx-medium tx-11 tx-uppercase pd-y-12 pd-x-25 tx-spacing-1",  "data-loading-text"=>"Loading...", autocomplete: "off" %>
  </div>
<% end %>
