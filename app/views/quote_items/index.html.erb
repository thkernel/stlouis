<p id="notice"><%= notice %></p>

<h1>Quote Items</h1>

<table>
  <thead>
    <tr>
      <th>Uid</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @quote_items.each do |quote_item| %>
      <tr>
        <td><%= quote_item.uid %></td>
        <td><%= link_to 'Show', quote_item %></td>
        <td><%= link_to 'Edit', edit_quote_item_path(quote_item) %></td>
        <td><%= link_to 'Destroy', quote_item, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

